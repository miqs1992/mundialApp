<div class='row'>
    <div class='col-lg-12'>
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Nowy Użytkownik</h3>
            </div>
            <%= form_for @user do |f| %>
                <div class="box-body">
                    <div class="form-group">
                        <%= f.text_field :email, class: 'form-control', autofocus: true, placeholder: "E-mail"  %>
                    </div>
                    <div class="form-group">
                        <%= f.text_field :login, class: 'form-control', autofocus: true, placeholder: "Login"  %>
                    </div>
                    <div class="form-group">
                        <%= f.text_field :first_name, class: 'form-control', autofocus: true, placeholder: "Imię"  %>
                    </div>
                    <div class="form-group">
                        <%= f.text_field :last_name, class: 'form-control', autofocus: true, placeholder: "Nazwisko"  %>
                    </div>
                    <div class="box-footer">
                        <%= f.submit "Utwórz konto", class: 'btn btn-primary' %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

          