<div class='row'>
  <div class='col-lg-12'>
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Wybierz mistrza i króla strzelców</h3>
      </div>
      <% if  before_first_game? %>
      <%= form_for @user do |f| %>
        <div class="box-body">
          <div class="form-group">
            <%= f.label :team_id, "Mistrz"%>
              <%= f.select :team_id, 
                @teams.collect {|t| [ t.name, t.id ] }, 
                { include_blank: false }, 
                { class: 'form-control', autofocus: true, placeholder: "Mistrz" }  
              %>
          </div>
          <div class="form-group">
            <%= f.label :team_id, "Król strzelców"%>
              <%= f.grouped_collection_select :player_id,  @teams, :players, :name, :id, :name,
                { include_blank: false }, 
                { class: 'form-control', autofocus: true, placeholder: "Król strzelców" }
              %>
          </div>
          <div class="box-footer">
            <%= f.submit "Zapisz", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

          