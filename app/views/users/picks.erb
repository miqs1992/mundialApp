<div class='row'>
  <div class='col-lg-12'>
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Typy uczestników</h3>
      </div>
      <div class="box-body no-padding">
        <table class="table table-striped table-condensed text-center">
          <tbody>
            <tr>
              <th>Imię i nazwisko</th>
              <th>Mistrz</th>
              <th>Król</th>
            </tr>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.picked_tops? ? user.top_team.print : 'brak' %></td>
                <td><%= user.picked_tops? ? user.top_player.name : 'brak' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>