<div class='row'>
    <div class='col-lg-12'>
        <div class="box box-primary text-center">
            <div class="box-header">
              <h3 class="box-title">Mecze</h3>
              <div class="box-tools">
                <% if current_user.admin %>
                    <%= link_to "Utwórz mecz", new_match_path, :class => "btn btn-primary btn-sm" %>
                <% end %>
              </div>
            </div>
            <div class="box-body no-padding table-responsive">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 20px">Id</th>
                            <th>Dzień meczowy</th>
                            <th>Drużyny</th>
                            <th>Miasto</th>
                            <th>Godzina</th>
                            <th>Wynik</th>
                            <th>Edycja</th>
                        </tr>
                        <% @matches.each do |match| %>
                            <tr id="match_<%= match.id %>">
                                <td><%= match.id %></td>
                                <td><%= match.match_day.day_number %></td>
                                <td><%= match.print_teams.html_safe %></td>
                                <td><%= match.city %></td>
                                <td><%= I18n.l(match.start_time, format: :short) %></td>
                                <td><%= print_score(match) %></td>
                                <td><%= link_to "Edit", edit_match_path(match.id), :class => "btn btn-primary btn-xs" %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>