<div class='row'>
    <div class='col-lg-8 col-lg-offset-2'>
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Utwórz nowy mecz</h3>
            </div>
            <%= form_for @match do |f| %>
                <div class="box-body">
                    <div class="form-group">
                        <label>Dzień meczowy</label>
                        <%= f.collection_select(:match_day_id, MatchDay.all.order(:day_number), :id, :day_number, {}, {class: 'form-control'}) %>
                    </div>
                    <div class="form-group">
                        <label>Drużyna 1</label>
                        <%= f.collection_select(:team1_id, Team.all.order(:name), :id, :name, {}, {class: 'form-control'}) %>
                    </div>
                    <div class="form-group">
                        <label>Drużyna 2</label>
                        <%= f.collection_select(:team2_id, Team.all.order(:name), :id, :name, {}, {class: 'form-control'}) %>
                    </div>
                    <div class="form-group">
                        <label>Miasto</label>
                        <%= f.text_field :city, class: 'form-control'%>
                    </div>
                    <div class="form-group">
                        <label>Godzina rozpoczęcia</label>
                        <%= f.datetime_local_field :start_time, class: 'form-control' %>
                    </div>
                    <div class="box-footer">
                        <%= f.submit "Utwórz", class: 'btn btn-primary' %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>