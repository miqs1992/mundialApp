<div class='row'>
    <div class='col-lg-12'>
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Ustaw wynik meczu</h3>
            </div>
            <%= form_for @match, url: set_score_match_path do |f| %>
                <div class="box-body">
                    <div class="form-group">
                        <label><%= @match.team1.name %></label>
                        <%= f.number_field :score1, class: 'form-control', autofocus: true, within: 0...10 %>
                    </div>
                    <div class="form-group">
                        <label><%= @match.team2.name %></label>
                        <%= f.number_field :score2, class: 'form-control', autofocus: true, within: 0...10 %>
                    </div>
                    <div class="box-footer">
                        <%= f.submit "Ustaw wynik", class: 'btn btn-primary' %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>