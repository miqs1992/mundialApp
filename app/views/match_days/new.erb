<div class='row'>
    <div class='col-lg-12'>
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Nowa dzień meczowy</h3>
            </div>
            <%= form_for [@round, @match_day] do |f| %>
                <div class="box-body">
                    <div class="form-group">
                        <%= f.number_field :day_number, class: 'form-control', autofocus: true, placeholder: "Numer dnia" %>
                    </div>
                    <div class="form-group">
                        <%= f.datetime_local_field :stop_bet_time, class: 'form-control', autofocus: true, placeholder: "Koniec obstawiania" %>
                    </div>
                    <div class="box-footer">
                        <%= f.submit "Utwórz dzień", class: 'btn btn-primary' %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>