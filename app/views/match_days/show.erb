<div class="row">
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-aqua"><i class="fa fa-futbol-o"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Numer dnia meczowego</span>
                <span class="info-box-number"><%= @match_day.day_number %></span>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-green"><i class="fa fa-clock-o"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Koniec obstawiania</span>
                <span class="info-box-number"><%= l(@match_day.stop_bet_time, format: :short) %></span>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="fa fa-object-group"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Runda</span>
                <span class="info-box-number"><%= link_to @round.title, round_path(@round) %></span>
            </div>
        </div>
    </div>
</div>

<div class='row'>
    <div class='col-lg-12'>
        <div class="box box-primary text-center">
            <div class="box-header">
              <h3 class="box-title">Mecze tego dnia</h3>
            </div>
            <div class="box-body no-padding">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 20px">Id</th>
                            <th>Miejsce</th>
                            <th>Drużyna 1</th>
                            <th>Drużyna 2</th>
                            <th>Wynik / data</th>
                            <th>Twój typ</th>
                        </tr>
                        <% @match_day.matches.each do |m| %>
                            <tr>
                                <td><%= m.id %></td>
                                <td><%= m.city %></td>
                                <td><span class="flag-icon flag-icon-<%= m.team1.flag %>"></span> <%= m.team1.name %></td>
                                <td><span class="flag-icon flag-icon-<%= m.team2.flag %>"></span> <%= m.team2.name %></td>
                                <td><%= m.print_score %></td>
                                <td><%= print_bet(current_user.id, m, @match_day.stop_bet_time) %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>