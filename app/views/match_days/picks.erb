<div class='row'>
  <div class='col-lg-12' style="margin-bottom: 25px">
    <div class="box box-primary text-center">
      <div class="box-header">
        <h3 class="box-title">Typy w dniu meczowy</h3>
      </div>
      <div class="box-body no-padding">
        <table class="table table-striped table-bordered table-condensed">
          <tbody>
            <tr>
              <th>Gracz</th>
              <% @matches.each do |m| %>
                <th colspan=2><%= m.print_teams.html_safe %></th>
              <% end %>
            </tr>
            <% @bets.each_pair do  |id, array|%>
            <% array = array.sort_by &:match_id %>
              <tr <%= "class=bg-yellow" if array.first.user == current_user%> >
                <td><%= array.first.user.name %></td>
                <% array.each do |bet| %>
                  <td><%= bet.print %><%= " *" if bet.bonus %>
                  <td><%= bet.points %> pkt</td>
                <% end %>
              </tr>
            <% end %>
            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>