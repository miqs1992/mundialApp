<div class='row'>
  <div class='col-lg-12' style="margin-bottom: 25px">
    <div class="box box-primary text-center">
      <div class="box-header">
        <h3 class="box-title">Dni Meczowe</h3>
      </div>
      <div class="box-body no-padding">
        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <th style="width: 20px">Id</th>
              <th>Numer</th>
              <th>Koniec obstawiania</th>
              <th>Runda</th>
              <th>Ilość meczów</th>
              <th>Typy</th>
            </tr>
            <% @match_days.each do |day| %>
              <tr id="match_day_<%= day.id %>">
                <td><%= day.id %></td>
                <td><%= day.day_number %></td>
                <td><%= I18n.l(day.stop_bet_time, format: :short) %></td>
                <td><%= day.round.title %></td>
                <td><%= day.matches.length %></td>
                <td><%= link_to "Typy", match_day_path(day.id), :class => "btn btn-primary btn-xs" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>