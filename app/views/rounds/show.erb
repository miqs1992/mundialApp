<div class='row'>
    <div class='col-lg-12'>
        <div class="box box-primary text-center">
            <div class="box-header">
              <h3 class="box-title">Runda: <%= @round.title %></h3>
            </div>
            <div class="box-body no-padding">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 20px">Id</th>
                            <th>Dzień</th>
                            <th>Koniec obstawiania</th>
                            <th>Ilość meczy</th>
                            <th>Link</th>
                        </tr>
                        <% @match_days.each do |md| %>
                            <tr>
                                <td><%= md.id %></td>
                                <td><%= md.day_number %></td>
                                <td><%= l(md.stop_bet_time, format: "%e %B %Y %H:%M") %></td>
                                <td><%= md.match_count %></td>
                                <td><%= link_to "Link", round_match_day_path(@round.id, md.id), :class => "btn btn-primary btn-xs" %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>