<div class='row'>
    <div class='col-lg-12'>
        <div class="box box-primary text-center">
            <div class="box-header">
              <h3 class="box-title">Rundy</h3>
              <div class="box-tools">
                <% if current_user.admin %>
                    <%= link_to "Utwórz", new_round_path, :class => "btn btn-primary btn-sm" %>
                <% end %>
              </div>
            </div>
            <div class="box-body no-padding">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 20px">Id</th>
                            <th>Nazwa</th>
                            <th>Przelicznik</th>
                            <th>Ilość dni meczowych</th>
                            <th>Link</th>
                        </tr>
                        <% @rounds.each do |round| %>
                            <tr>
                                <td><%= round.id %></td>
                                <td><%= round.title %></td>
                                <td><%= round.score_factor %></td>
                                <td><%= round.match_day_count %></td>
                                <td><%= link_to "Link", round_path(round.id), :class => "btn btn-primary btn-xs" %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>